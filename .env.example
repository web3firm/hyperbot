# Hyperliquid Trading Bot Configuration Template

# ⚠️ SECURITY WARNING ⚠️
# This file contains sensitive information. Never commit it to version control!
# Add .env to your .gitignore file.

# =============================================================================
# HYPERLIQUID API CONFIGURATION
# =============================================================================
# Your Hyperliquid private key (required for trading)
PRIVATE_KEY=

# Your wallet address
WALLET_ADDRESS=

# Hyperliquid API URL (use mainnet URL)
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz

# =============================================================================
# TRADING PARAMETERS
# =============================================================================
# Percentage of portfolio to risk per trade (recommended: 10.0)
INITIAL_PORTFOLIO_PERCENTAGE=10.0

# Leverage to use (1-20, recommended: 5)
LEVERAGE=5

# Maximum number of concurrent trades (recommended: 5)
MAX_TRADES=5

# Risk per trade as percentage of portfolio (recommended: 2.0)
RISK_PER_TRADE=2.0

# Quick profit threshold in % (recommended: 2.0)
QUICK_PROFIT_THRESHOLD=2.0

# Percentage to exit at quick profit (recommended: 40.0)
QUICK_PROFIT_EXIT_PERCENTAGE=40.0

# ML profit thresholds
ML_PROFIT_THRESHOLD_1=3.0
ML_PROFIT_EXIT_1=30.0
ML_PROFIT_THRESHOLD_2=4.0

# Stop loss percentage (recommended: 2.0)
STOP_LOSS_PERCENTAGE=2.0

# =============================================================================
# TRADING SYMBOLS
# =============================================================================
# Comma-separated list of symbols to trade (no spaces)
SYMBOLS=ETH-USD,BTC-USD,SOL-USD

# Primary timeframe for analysis
TIMEFRAME=1m

# Analysis timeframe (for longer-term signals)
ANALYSIS_TIMEFRAME=5m

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================
# How often to retrain ML models (in hours)
MODEL_RETRAIN_INTERVAL=24

# Lookback period for feature engineering
FEATURE_LOOKBACK_PERIOD=100

# Minimum confidence required for ML predictions
PREDICTION_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# SENTIMENT ANALYSIS
# =============================================================================
# Enable sentiment analysis (true/false)
ENABLE_SENTIMENT_ANALYSIS=true

# Sentiment sources (comma-separated)
SENTIMENT_SOURCES=twitter,reddit,news

# Weight of sentiment in trading decisions (0.0-1.0)
SENTIMENT_WEIGHT=0.3

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Maximum portfolio drawdown before stopping (%)
MAX_DRAWDOWN=5.0

# Daily loss limit (%)
DAILY_LOSS_LIMIT=3.0

# Portfolio heat limit (exposure vs capital)
PORTFOLIO_HEAT=1.0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/trading_bot.log

# =============================================================================
# BACKTESTING CONFIGURATION
# =============================================================================
# Backtest start date (YYYY-MM-DD)
BACKTEST_START_DATE=2023-01-01

# Backtest end date (YYYY-MM-DD)
BACKTEST_END_DATE=2024-01-01

# Initial capital for backtesting
BACKTEST_CAPITAL=10000

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================
# Enable paper trading mode (true/false) - NOT IMPLEMENTED YET
PAPER_TRADING=false

# Webhook URL for notifications (optional)
WEBHOOK_URL=

# Discord webhook for alerts (optional)
DISCORD_WEBHOOK=

# Telegram bot configuration (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# API KEYS FOR EXTERNAL SERVICES (OPTIONAL)
# =============================================================================
# Twitter API keys (for sentiment analysis)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# News API key
NEWS_API_KEY=

# Reddit API credentials
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=

# =============================================================================
# NOTES
# =============================================================================
# 1. Start with small amounts and low leverage for testing
# 2. Monitor the bot closely during initial runs
# 3. Adjust parameters based on your risk tolerance
# 4. Keep your private keys secure and never share them
# 5. Consider using a separate wallet for bot trading
# 6. Regularly review and adjust trading parameters
# 7. Set up proper monitoring and alerts