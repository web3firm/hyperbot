# HyperBot Environment Variables
# Copy this file to .env and configure with your credentials
# ⚠️ SECURITY WARNING: Never commit .env to version control!

# =============================================================================
# HYPERLIQUID API CONFIGURATION (Required)
# =============================================================================
# Your HyperLiquid private key for transaction signing (API wallet)
API_SECRET=0xYourPrivateKeyHere

# Main account address to trade on behalf of
ACCOUNT_ADDRESS=0xYourMainAccountAddress

# Network Configuration
# Use testnet (true) or mainnet (false)
TESTNET=false

# RPC URLs (optional - uses SDK defaults if not set)
# Uncomment and modify if you need custom RPC endpoints
# TESTNET_RPC_URL=https://api.hyperliquid-testnet.xyz
# MAINNET_RPC_URL=https://api.hyperliquid.xyz

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Trading symbol (SOL, BTC, ETH, etc.)
SYMBOL=SOL

# Bot mode: rule_based (current), hybrid (future), ai (future)
BOT_MODE=rule_based

# Maximum leverage (1-50x)
MAX_LEVERAGE=5

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Maximum drawdown before auto-pause (percentage)
MAX_DRAWDOWN_PCT=10.0

# Maximum daily loss limit (percentage)
MAX_DAILY_LOSS_PCT=5.0

# Kill switch thresholds (optional - defaults to MAX_DRAWDOWN/MAX_DAILY_LOSS if not set)
# KILL_SWITCH_DAILY_LOSS_PCT=5.0
# KILL_SWITCH_DRAWDOWN_PCT=10.0

# Stop loss percentage per trade (used by legacy strategies)
STOP_LOSS_PCT=5.0

# Take profit percentage per trade (used by legacy strategies)
TAKE_PROFIT_PCT=15.0

# =============================================================================
# POSITION SIZING
# =============================================================================
# Maximum number of concurrent positions
MAX_POSITIONS=1

# Position size as percentage of account equity
POSITION_SIZE_PCT=50

# Maximum position size per single trade (percentage)
MAX_POSITION_SIZE_PCT=55

# Risk per trade as percentage of account
RISK_PER_TRADE_PCT=2.0

# =============================================================================
# TELEGRAM NOTIFICATIONS (Optional)
# =============================================================================
# Leave empty to disable Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Telegram notification settings (optional - uses defaults if not set)
# Set to 'false' to disable specific notification types
TG_NOTIFY_SIGNALS=true
TG_NOTIFY_FILLS=true
TG_NOTIFY_PNL_WARNINGS=true
# Scheduled status update interval in seconds (0 to disable)
TG_STATUS_INTERVAL=3600

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# WORLD-CLASS STRATEGY CONFIGURATION
# =============================================================================
# Strategy mode: world_class (recommended), enterprise, all
STRATEGY_MODE=world_class

# -------------- Market Regime Detection --------------
# ADX threshold for trending market (default: 25)
ADX_TRENDING_THRESHOLD=25

# ADX threshold for strong trend (default: 35)
ADX_STRONG_THRESHOLD=35

# ATR ratio for high volatility (default: 1.5)
VOLATILITY_HIGH_RATIO=1.5

# -------------- Smart Money Concepts --------------
# Minimum FVG gap size as percentage (default: 0.3)
FVG_MIN_GAP_PCT=0.3

# Order Block lookback period in candles (default: 50)
ORDER_BLOCK_LOOKBACK=50

# Liquidity sweep lookback (default: 20)
LIQUIDITY_LOOKBACK=20

# -------------- Multi-Timeframe Analysis --------------
# Higher timeframe intervals (comma-separated)
HTF_INTERVALS=15m,1h,4h

# Lower timeframe interval
LTF_INTERVAL=1m

# MTF EMA periods
MTF_EMA_FAST=9
MTF_EMA_SLOW=21

# -------------- Order Flow Analysis --------------
# Whale trade threshold in USD (default: 50000)
WHALE_THRESHOLD_USD=50000

# Large trade threshold in USD (default: 10000)
LARGE_TRADE_THRESHOLD_USD=10000

# -------------- Adaptive Risk Management --------------
# ATR multiplier for stop loss (default: 2.0)
ATR_SL_MULTIPLIER=2.0

# ATR multiplier for take profit (default: 3.5)
ATR_TP_MULTIPLIER=3.5

# Signal cooldown in seconds (default: 180)
SIGNAL_COOLDOWN=180

# Minimum signal score out of 10 (default: 6)
MIN_SIGNAL_SCORE=6

# -------------- Scalping Strategy --------------
# ATR multiplier for scalp TP (default: 1.5)
SCALP_ATR_TP=1.5

# ATR multiplier for scalp SL (default: 0.75)
SCALP_ATR_SL=0.75

# Minimum ATR percentage for scalping (default: 0.2)
SCALP_MIN_ATR_PCT=0.2

# Maximum ATR percentage for scalping (default: 1.0)
SCALP_MAX_ATR_PCT=1.0

# Momentum threshold for scalp signals (default: 0.15)
SCALP_MOMENTUM_THRESHOLD=0.15

# Volume threshold ratio for confirmation (default: 1.3)
SCALP_VOLUME_THRESHOLD=1.3

# Minimum scalp signal score (default: 5)
SCALP_MIN_SCORE=5

# Scalp cooldown in seconds (default: 60)
SCALP_COOLDOWN=60

# -------------- BTC Correlation (Altcoins) --------------
# High correlation threshold (default: 0.7)
HIGH_CORRELATION=0.7

# Moderate correlation threshold (default: 0.4)
MODERATE_CORRELATION=0.4

# Low correlation threshold (default: 0.1)
LOW_CORRELATION=0.1

# Correlation lookback period (default: 20)
CORRELATION_PERIOD=20

# Relative strength lookback (default: 14)
RS_PERIOD=14

# RS outperformance threshold (default: 1.05)
RS_OUTPERFORM=1.05

# RS underperformance threshold (default: 0.95)
RS_UNDERPERFORM=0.95

# =============================================================================
# AI/ML AUTO-TRAINING CONFIGURATION
# =============================================================================
# Minimum trades required before auto-retraining (default: 100)
MIN_TRADES_FOR_RETRAIN=100

# Enable auto-training scheduler (checks daily)
AUTO_TRAIN_ENABLED=true

# Model save directory
MODEL_SAVE_PATH=ml/models/saved

# Training data directory (trade logs)
TRADE_LOG_PATH=data/trades

# =============================================================================
# PAPER TRADING MODE (NEW in v4.0)
# =============================================================================
# Enable paper trading (simulated trades, no real execution)
PAPER_TRADING=false

# Starting virtual balance for paper trading
PAPER_TRADING_BALANCE=1000

# =============================================================================
# MULTI-ASSET MODE (NEW in v4.0)
# =============================================================================
# Enable trading multiple assets simultaneously
MULTI_ASSET_MODE=false

# Assets to trade (comma-separated)
MULTI_ASSETS=SOL,ETH,BTC

# Maximum concurrent positions across all assets
# MAX_POSITIONS=3 (already defined above)

# Cooldown per asset in seconds (default: 300)
ASSET_COOLDOWN=300

# =============================================================================
# TIMEFRAME CONFIGURATION (NEW in v4.0)
# =============================================================================
# Entry timeframe (1m, 5m, 15m, 1h, 4h)
TIMEFRAME=1m

# =============================================================================
# SWING STRATEGY CONFIGURATION (NEW in v4.0)
# =============================================================================
# Target price move % for take profit
SWING_TARGET_PCT=2.0

# Stop loss price move %
SWING_STOP_PCT=0.8

# Cooldown between signals in seconds
SWING_COOLDOWN=300

# =============================================================================
# PRO TRADING FILTERS (NEW in v4.0)
# =============================================================================
# Higher timeframe minimum alignment score (0-1)
HTF_MIN_ALIGNMENT=0.6

# BTC dump threshold % (don't long alts if BTC drops this much)
BTC_DUMP_THRESHOLD=-2.0

# BTC pump threshold % (don't short alts if BTC pumps this much)
BTC_PUMP_THRESHOLD=2.0

# Momentum alignment periods
MOMENTUM_RSI_PERIOD=14
MOMENTUM_MACD_FAST=12
MOMENTUM_MACD_SLOW=26
MOMENTUM_MACD_SIGNAL=9

# =============================================================================
# KELLY CRITERION POSITION SIZING (v4.0)
# =============================================================================
# Enable/disable Kelly adaptive sizing
KELLY_ENABLED=true

# Fractional Kelly (0.5 = Half Kelly safer, 1.0 = Full Kelly aggressive)
KELLY_FRACTION=0.5

# Minimum trades before Kelly adjusts sizing (uses POSITION_SIZE_PCT before)
KELLY_MIN_TRADES=20

# Kelly's max recommended position % (safety cap)
KELLY_MAX_POSITION_PCT=25

# =============================================================================
# SMALL ACCOUNT MODE (v4.0 - Auto-detected by balance)
# =============================================================================
# Threshold for small account mode (USD)
# Tiers: micro <$30, small <$100, starter <$500, normal >$500
SMALL_ACCOUNT_THRESHOLD=100
# Leverage and position limits are auto-set by tier
